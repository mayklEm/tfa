<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/green_button_pressed" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/green_button_default" /> <!-- focused -->
    <item android:drawable="@drawable/green_button_default" /> <!-- default -->

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />

            <margin
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>



</selector>







