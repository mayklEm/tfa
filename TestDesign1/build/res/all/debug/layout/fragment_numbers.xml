<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:visibility="visible">



    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold">
    </ListView>


    <Button
        android:id="@+id/back"
        android:text="@string/btn_back"
        android:background="@drawable/blue_button"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@android:id/list" />


    <!-- ***************TABLE LAYOUT******************** -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableNumbers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/back"
        android:scrollbars="vertical">

        <!-- 1. row -->
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width=".100dp"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/row1col1"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:textSize="20dp"
                android:text="@string/row_general" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row1col2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".50" >
            </LinearLayout>


        </TableRow>
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:background="#ffff865f" />

        <!-- 2. row -->
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/row2col1"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:textSize="20dp"
                android:text="@string/row_police" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row2col2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".50" >
            </LinearLayout>


        </TableRow>
        <!-- just draw a red line -->
        <View
            android:layout_height="2dip"
            android:background="#ffff865f" />

        <!-- 3. row -->
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <TextView
                android:id="@+id/row3col1"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:textSize="20dp"
                android:text="@string/row_medical" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/row3col2"
                android:orientation="vertical"
